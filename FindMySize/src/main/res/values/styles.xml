<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <!--progress bar-->
    <style name="GeneralLinearProgress" parent="android:Widget.ProgressBar.Small.Inverse">
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="PrimaryButton" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/bg_btn</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/_40sdp</item>
        <item name="android:paddingEnd">@dimen/_40sdp</item>
        <item name="android:paddingTop">@dimen/_16sdp</item>
        <item name="android:paddingBottom">@dimen/_16sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textDirection">locale</item>
    </style>

</resources>